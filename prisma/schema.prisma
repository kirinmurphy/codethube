generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model BlogPost {
  id                 Int        @id @default(autoincrement())
  title              String
  imgUrl             String
  body               String 
  externalSourceLink String?
  youtubeId          String?  
  blogId             String?  
  featured           Boolean?
  playOnYoutubeOnly  Boolean
  createdAt          DateTime   @default(now())
  tags               BlogPostTag[]

  @@index([createdAt])
}

model Tag {
  id   Int      @id @default(autoincrement())
  name String   @unique
  posts BlogPostTag[]

  @@index([name])
}


model BlogPostTag {
  id         Int      @id @default(autoincrement())
  blogPost   BlogPost @relation(fields: [blogPostId], references: [id])
  blogPostId Int
  tag        Tag      @relation(fields: [tagId], references: [id])
  tagId      Int
}
